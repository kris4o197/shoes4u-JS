<h1 class="mb-4">My Orders</h1>

<% if (orders.length === 0) { %>
  <div class="alert alert-info">You have no orders yet.</div>
<% } else { %>
  <ul class="list-group">
    <% orders.forEach(o => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong>Order #<%= o.id %></strong><br>
          <small><%= o.createdAt.toLocaleString() %></small>
        </div>
        <div>
          <span class="badge bg-secondary me-3">$<%= o.totalPrice %></span>
          <a href="/orders/<%= o.id %>" class="btn btn-sm btn-outline-primary">View</a>
        </div>
      </li>
    <% }) %>
  </ul>
<% } %>
