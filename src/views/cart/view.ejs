<h1 class="mb-4">Your Cart</h1>

<% if (cartItems.length === 0) { %>
  <div class="alert alert-info">Your cart is empty.</div>
<% } else { %>
  <table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
      <tr>
        <th>Product</th>
        <th style="width: 140px;">Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th style="width: 120px;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% cartItems.forEach(item => { %>
        <tr>
          <td><%= item.product.name %></td>
          <td>
            <form action="/cart/update/<%= item.productId %>" method="POST" class="d-flex gap-2">
              <input 
                type="number" 
                name="quantity" 
                min="1" 
                value="<%= item.quantity %>" 
                class="form-control form-control-sm">
              <button class="btn btn-sm btn-outline-primary">Update</button>
            </form>
          </td>
          <td>$<%= item.product.price %></td>
          <td>$<%= (item.product.price * item.quantity).toFixed(2) %></td>
          <td>
            <form action="/cart/remove/<%= item.productId %>" method="POST">
              <button class="btn btn-sm btn-outline-danger">Remove</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h3 class="mt-3">Total: $<%= total.toFixed(2) %></h3>

  <a href="/checkout" class="btn btn-success mt-3">Proceed to checkout</a>
<% } %>
