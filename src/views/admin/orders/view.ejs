<h1 class="mb-3">Admin â€“ Order #<%= order.id %></h1>

<p>User: <strong><%= order.user.email %></strong></p>
<p>Total: $<%= order.totalPrice %></p>
<p>Status: <span class="badge bg-info"><%= order.status %></span></p>

<form action="/admin/orders/<%= order.id %>/status" method="POST" class="row g-2 mb-4">
  <div class="col-auto">
    <select name="status" class="form-select">
      <% statuses.forEach(s => { %>
        <option value="<%= s %>" <%= order.status === s ? "selected" : "" %>>
          <%= s %>
        </option>
      <% }) %>
    </select>
  </div>
  <div class="col-auto">
    <button class="btn btn-primary">Update status</button>
  </div>
</form>

<h3>Items</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Product</th>
      <th>Qty</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% order.items.forEach(i => { %>
      <tr>
        <td><%= i.productName %></td>
        <td><%= i.quantity %></td>
        <td>$<%= i.productPrice %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
