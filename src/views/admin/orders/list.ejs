<h1 class="mb-4">Admin â€“ Orders</h1>

<table class="table table-striped table-bordered align-middle">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Total</th>
      <th>Status</th>
      <th>Date</th>
      <th style="width:120px;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(o => { %>
      <tr>
        <td><%= o.id %></td>
        <td><%= o.user.email %></td>
        <td>$<%= o.totalPrice %></td>
        <td><span class="badge bg-secondary"><%= o.status %></span></td>
        <td><%= o.createdAt.toLocaleString() %></td>
        <td>
          <a href="/admin/orders/<%= o.id %>" class="btn btn-sm btn-primary">View</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
