<h1 class="mb-4">Admin – Products</h1>

<a href="/admin/products/create" class="btn btn-success mb-3">+ Add Product</a>

<table class="table table-striped table-bordered align-middle">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th style="width:160px;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.name %></td>
        <td>$<%= p.price %></td>
        <td><%= p.category ? p.category.name : "–" %></td>
        <td>
          <a href="/admin/products/edit/<%= p.id %>" class="btn btn-sm btn-primary">Edit</a>

          <form action="/admin/products/delete/<%= p.id %>" method="POST" class="d-inline"
                onsubmit="return confirm('Delete this product?');">
            <button class="btn btn-sm btn-outline-danger">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
