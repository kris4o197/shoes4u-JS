<!-- HERO SECTION -->
<div class="p-5 mb-4 bg-dark text-white rounded-3" 
     style="
       background-image: url('https://i.imgur.com/QhYwG9p.jpeg');
       background-size: cover;
       background-position: center;
       background-repeat: no-repeat;
     ">

  <div class="container py-5">
    <h1 class="display-4 fw-bold">Welcome to Shoes4U</h1>
    <p class="lead mt-2">Find your perfect pair. Premium shoes, great prices.</p>

    <a href="#products" class="btn btn-primary btn-lg mt-3">
      Shop Now
    </a>
  </div>
</div>


<form method="GET" action="/" class="row g-2 mb-4">
  <div class="col-12 col-md-4">
    <input 
      type="text" 
      name="search" 
      class="form-control"
      placeholder="Search products..."
      value="<%= search || '' %>">
  </div>

  <div class="col-6 col-md-3">
    <select name="category" class="form-select">
      <option value="">All Categories</option>
      <% categories.forEach(c => { %>
        <option 
          value="<%= c.id %>"
          <%= String(category) === String(c.id) ? "selected" : "" %>>
          <%= c.name %>
        </option>
      <% }) %>
    </select>
  </div>

  <div class="col-3 col-md-2">
    <input 
      type="number" 
      step="0.01"
      name="min"
      class="form-control"
      placeholder="Min Price"
      value="<%= min || '' %>">
  </div>

  <div class="col-3 col-md-2">
    <input 
      type="number" 
      step="0.01"
      name="max"
      class="form-control"
      placeholder="Max Price"
      value="<%= max || '' %>">
  </div>

  <div class="col-6 col-md-1 d-grid">
    <button class="btn btn-primary">Filter</button>
  </div>

  <div class="col-6 col-md-1 d-grid">
    <a href="/" class="btn btn-outline-secondary">Clear</a>
  </div>
</form>

<a id="products"></a>

<% if (products.length === 0) { %>
  <p>No products found.</p>
<% } else { %>
  <div class="row g-4">
    <% products.forEach(p => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
          <% if (p.imageUrl) { %>
            <img src="<%= p.imageUrl %>" class="card-img-top" style="height:200px; object-fit:cover;">
          <% } %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= p.name %></h5>
            <p class="card-text mb-1">$<%= p.price %></p>
            <p class="text-muted flex-grow-1">
              <%= p.category ? p.category.name : "Uncategorized" %>
            </p>

            <a href="/product/<%= p.id %>" class="btn btn-sm btn-primary mt-auto">
              View details
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } %>
